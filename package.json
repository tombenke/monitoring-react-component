{
  "name": "monitoring-react-component",
  "description": "A template project for react components",
  "version": "1.0.1",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "author": {
    "name": "TamÃ¡s Benke",
    "email": "tombenke@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/tombenke/monitoring-react-component/issues"
  },
  "license": "MIT",
  "homepage": "./",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/tombenke/monitoring-react-component.git"
  },
  "engines": {
    "node": ">= 9.11.1",
    "npm": ">= 6.5.0"
  },
  "private": false,
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/addon-actions": "^4.1.4",
    "@storybook/addon-links": "^4.1.4",
    "@storybook/addons": "^4.1.4",
    "@storybook/react": "^4.1.4",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.3",
    "source-map-explorer": "^1.6.0"
  },
  "babel": {
    "presets": [
      "react",
      "env",
      "stage-2"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*/index.js",
      "!src/index.js",
      "!src/jest.config.js",
      "!**/serviceWorker.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/dist/",
      "!<rootDir>/build/",
      "!**/*.stories.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:3007",
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "build": "react-scripts build",
    "coverage": "npm test -- --coverage",
    "coveralls": "npm test -- --coverage && cat ./coverage/lcov.info | coveralls",
    "eject": "react-scripts eject",
    "prettier": "prettier --single-quote --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "start": "react-scripts start",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -c .storybook -o ./docs/storybook",
    "build-dist": "rimraf dist && NODE_ENV=production babel src/components --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "test": "react-scripts test",
    "test-single": "cross-env CI=true react-scripts test --verbose --runInBand"
  }
}
